{
  "name": "BusinessMonitor",
  "version": "0.1.0+95",
  "private": true,
  "type": "module",
  "scripts": {
    "gen:env": "tsx scripts/initial_env.ts",
    "gen:prisma": "DISABLE_ERD=true prisma generate",
    "gen:erd": "DISABLE_ERD=false prisma generate",
    "gen:openapi": "tsx scripts/generate_openapi.ts > openapi.json",
    "gen:types": "tsc -p tsconfig.types.json",
    "gen:all": "npm run gen:openapi && npm run gen:types",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down -v",
    "db:logs": "docker compose logs -f postgres",
    "smoke:db_health": "tsx scripts/db_health.ts",
    "predev": "npm run gen:env",
    "dev": "next dev --turbopack",
    "prebuild": "npm run gen:env",
    "build": "npm run gen:prisma && next build",
    "start": "next start",
    "pretest": "npm run build",
    "test": "jest --coverage --passWithNoTests",
    "test:coverage": "jest --coverage",
    "coverage:open": "open coverage/lcov-report/index.html",
    "lint": "next lint && eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|ts|tsx|json)\"",
    "check-format": "prettier --ignore-path .gitignore --list-different \"**/*.+(js|jsx|ts|tsx|json)\"",
    "validate": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|ts|tsx|json|css)\" && next lint && eslint --fix --ext .js,.jsx,.ts,.tsx . && npm run test",
    "update-version": "tsx scripts/update_version.ts && git add package.json",
    "import-data": "tsx scripts/import_data.ts",
    "prepare": "husky",
    "i18n:pull": "i18nexus pull && tsx scripts/move_locales.ts",
    "swarm": "next start -p 10002"
  },
  "dependencies": {
    "@passwordless-id/webauthn": "^2.3.1",
    "@prisma/client": "^6.13.0",
    "@types/supertest": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "i18next": "^25.3.2",
    "i18next-resources-to-backend": "^1.2.1",
    "i18nexus-cli": "^3.7.0",
    "json2csv": "^6.0.0-alpha.2",
    "next": "15.4.4",
    "next-i18n-router": "^5.5.3",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.6.1",
    "react-icons": "^5.5.0",
    "react-usestateref": "^1.0.9",
    "secp256k1": "^5.0.1",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.17",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@eslint/eslintrc": "^3",
    "@mermaid-js/mermaid-cli": "^11.6.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/secp256k1": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.12.0",
    "prisma-erd-generator": "^2.0.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
