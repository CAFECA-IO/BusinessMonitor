{
  "name": "BusinessMonitor",
  "version": "0.1.0+31",
  "private": true,
  "type": "module",
  "scripts": {
    "generate": "DISABLE_ERD=true prisma generate",
    "generate:erd": "DISABLE_ERD=false prisma generate",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down -v",
    "db:logs": "docker compose logs -f postgres",
    "smoke:db_health": "tsx scripts/db_health.ts",
    "dev": "next dev --turbopack",
    "build": "npm run generate && next build",
    "start": "next start",
    "test": "jest --coverage --passWithNoTests",
    "lint": "next lint && eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|ts|tsx|json)\"",
    "check-format": "prettier --ignore-path .gitignore --list-different \"**/*.+(js|jsx|ts|tsx|json)\"",
    "validate": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|ts|tsx|json|css)\" && next lint && eslint --fix --ext .js,.jsx,.ts,.tsx . && npm run test",
    "update-version": "tsx scripts/update_version.ts && git add package.json",
    "import-data": "tsx scripts/import_data.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "autoprefixer": "^10.4.21",
    "json2csv": "^6.0.0-alpha.2",
    "next": "15.4.4",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@mermaid-js/mermaid-cli": "^11.6.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.12.0",
    "prisma-erd-generator": "^2.0.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
